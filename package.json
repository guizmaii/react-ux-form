{
  "name": "react-ux-form",
  "version": "0.6.1",
  "license": "MIT",
  "description": "A simple, fast and opinionated form library for React & React Native focusing on UX.",
  "author": "Mathieu Acthernoene <mathieu.acthernoene@swan.io>",
  "contributors": [
    "Frederic Godin <frederic.godin@swan.io>"
  ],
  "homepage": "https://github.com/swan-io/react-ux-form#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/swan-io/react-ux-form.git"
  },
  "sideEffects": false,
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "form",
    "hook",
    "react",
    "typescript",
    "ux",
    "validation"
  ],
  "scripts": {
    "build": "yarn clean && microbundle -f cjs,es",
    "clean": "rm -rf dist",
    "dev": "microbundle watch",
    "format": "prettier '**/*.{js,md,ts,tsx}' --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "tscheck": "tsc --noEmit",
    "prepare": "yarn test && yarn build"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/utils/"
    ]
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "use-subscription": "^1.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-react-jsx": "^7.14.9",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.1",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.25",
    "@types/use-subscription": "^1.0.0",
    "babel-jest": "^27.2.4",
    "jest": "^27.2.4",
    "microbundle": "^0.13.3",
    "prettier": "2.4.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.3"
  }
}
