{
  "name": "react-ux-form",
  "version": "1.1.0",
  "license": "MIT",
  "description": "A simple, fast and opinionated form library for React & React Native focusing on UX.",
  "author": "Mathieu Acthernoene <mathieu.acthernoene@swan.io>",
  "contributors": [
    "Frederic Godin <frederic.godin@swan.io>"
  ],
  "homepage": "https://github.com/swan-io/react-ux-form#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/swan-io/react-ux-form.git"
  },
  "sideEffects": false,
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "form",
    "hook",
    "react",
    "typescript",
    "ux",
    "validation"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "yarn clean && microbundle -f cjs,es",
    "clean": "rm -rf dist",
    "dev": "microbundle watch",
    "format": "prettier '**/*.{js,md,ts,tsx}' --write",
    "lint": "eslint src --ext ts,tsx src",
    "test": "jest",
    "test:watch": "jest --watch",
    "tscheck": "tsc --noEmit",
    "prepare": "yarn lint && yarn test && yarn build"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ],
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/utils/"
    ]
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "use-sync-external-store": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.44",
    "@types/use-sync-external-store": "^0.0.3",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "babel-jest": "^27.5.1",
    "eslint": "^8.13.0",
    "eslint-plugin-react-hooks": "^4.4.0",
    "jest": "^27.5.1",
    "microbundle": "^0.14.2",
    "prettier": "2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.6.3"
  }
}
